<h2>Sign up</h2>

<%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
  <%= render "devise/shared/error_messages", resource: resource %>

  <div class="field"> 
    <%= f.label :nombre %><br />
    <%= f.text_field :nombre, autofocus: true, autocomplete: "nombre" %>
  </div>

  <div class="field"> 
    <%= f.label :fecha_de_nacimiento %><br />
    <%= f.date_field :edad, autofocus: true, autocomplete: "edad" %>
  </div>
  
  <div class="field"> 
    <%= f.label :email %><br />
    <%= f.email_field :email, autofocus: true, autocomplete: "email" %>
  </div>

  <div class='field'>
    <%= f.label :telefono %><br />
    <%= f.telephone_field :telefono, autofocus: true, autocomplete: "telefono" %>
  </div>

  <div>
    <%= f.label :genero %><br />
    <%= f.select :genero, %w{Hombre Mujer Otro}, :prompt => 'Select', required: true, placeholder: 'Genero', class: 'form-control' %>
  </div>

  <div class='field'>
    <%= f.label :comuna %><br />
    <%= f.text_field :comuna, autofocus: true, autocomplete: "comuna" %>
  </div>

  <div class='field'>
    <%= f.label :descripcion %><br />
    <%= f.text_field :descripcion, autofocus: true, autocomplete: "descripcion" %>
  </div>

  <div class="field">
    <%= f.label :password %>
    <% if @minimum_password_length %>
    <em>(<%= @minimum_password_length %> characters minimum)</em>
    <% end %><br />
    <%= f.password_field :password, autocomplete: "new-password" %>
  </div>

  <div class="field">
    <%= f.label :password_confirmation %><br />
    <%= f.password_field :password_confirmation, autocomplete: "new-password" %>
  </div>

  <div class="actions">
    <%= f.submit "Crearwea <-- rodrigo diciendo garabtos" %>
  </div>
<% end %>

<%= render "users/shared/links" %>
